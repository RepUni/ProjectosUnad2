<Window x:Class="ProjectosUnad2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectosUnad2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,-44,-16">
        <StackPanel Margin="20,20,43,10">
            <Label Content="Horas Trabajadas:" />
            <TextBox x:Name="txtHoras" />

            <Label Content="Tarifa por Hora:" />
            <TextBox x:Name="txtTarifa" />

            <Button Content="Calcular Salario" Click="BtnCalcular_Click" Margin="0,10" />

            <Label Content="Salario:" />
            <TextBox x:Name="txtSalario" IsReadOnly="True" />

            <Label x:Name="lblMensaje" Content="" Foreground="Red" />
        </StackPanel>
        

    </Grid>
</Window>
