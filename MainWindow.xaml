<Window x:Class="ejer7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ejer7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <Label Content="Cantidad de trabajadores:" />
            <TextBox x:Name="NumTrabajadoresTextBox" />
            <Button Content="Calcular Salarios" Click="CalcularSalarios_Click" Margin="0,10" />
            <TextBox x:Name="OutputTextBox" IsReadOnly="True" Height="250" VerticalScrollBarVisibility="Auto" />
        </StackPanel>
    </Grid>
</Window>
